---
layout: base
---
<header class="hero">
  <div class="hero-content">
    <div class="intro">
      {{ content | safe }}
    </div>
    {% if site.socialLinks %}
      <ul class="hero__social-links">
        {% for item in site.socialLinks %}
          {% set externalAttribute = '' %}

          {% if item.external %}
            {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
          {% endif %}

          <li>
            <a class="m-icons" href="{{ item.url | url }}" {{ externalAttribute | safe }}>
              <img  style="width:30px; height:30px;" src="{{ item.iconsUrl }}" alt="{{ item.text }}">
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</header>
{% if collections.portfolios %}
<section class="portfolio-list__wrapper">
 <h2 class="post-list__heading">近期作品</h2>
  <div class="portfilo-container">
    {% for portfolio in collections.portfolios | head(-4) %}
      <a class="home-portfolio-item" href="{{ portfolio.url }}">
      <img src="{{ portfolio.data.coverImg }}">
    </a>
    {% endfor %} 
  </div>
    <a class="all-portfolio-link" href="{{ '/portfolios/' | url }}"></a>
</section>
{% endif %} 
<section class="post-list__wrapper">
  <h2 class="post-list__heading">最新文章</h2>
  {% set postslist = collections.posts | head(-2) %}
  {% include "posts-list.njk" %}
  <a class="all-posts-link" href="{{ '/blog/' | url }}">看更多...</a>
</section>

